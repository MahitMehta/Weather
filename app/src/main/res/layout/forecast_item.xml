<?xml version="1.0" encoding="utf-8"?>
<eightbitlab.com.blurview.BlurView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forecast_blurView"
    android:background="@drawable/forecast_rounded_view"
    app:blurOverlayColor="#9948319D"
    android:layout_marginBottom="15dp"
    android:layout_marginHorizontal="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/forecast_time"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="12 AM"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/forecast_icon"
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/sun_cloud_little_rain" />
        <TextView
            android:id="@+id/forecast_temp"
            android:layout_width="75dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text=""
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</eightbitlab.com.blurview.BlurView>