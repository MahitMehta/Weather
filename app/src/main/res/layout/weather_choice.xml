<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weather_choice_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/weather_choice_bg_image">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/choice_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="75sp"
            android:textStyle="normal"></TextView>

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/choice_weather_icon"
            android:translationY="-30dp"
            android:layout_width="215dp"
            android:layout_height="215dp" />
    </RelativeLayout>
    <LinearLayout
        android:paddingHorizontal="25dp"
        android:translationY="-90dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/choice_temp_high_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#99EBEBF5"
                android:text="">
            </TextView>
            <TextView
                android:id="@+id/choice_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="">
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/choice_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="">
        </TextView>
    </LinearLayout>
</LinearLayout>